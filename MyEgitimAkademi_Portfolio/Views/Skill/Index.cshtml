﻿@model List<MyEgitimAkademi_Portfolio.Models.Skill>

    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }

    <head>
        <!-- Font Awesome CDN -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    </head>
    <h2>Yeteneklerim Sayfası</h2>

    <table class="table table-bordered">
        <tr>
            @*<th>#</th>*@
            <th>Yetenek Adı</th>
            <th>Yetenek Değerim</th>
        
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.SkillTitle</td>
                <td>@item.SkillValue</td>
               
                <td><a href="/Skill/DeleteSkill/@item.SkillID" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="/Skill/UpdateSkill/@item.SkillID" class="btn btn-outline-success">Güncelle</a></td>
                @*<td><a href="/Project/GithubProject/@item.EducationID" class="btn btn-outline-warning">GitHub </a></td>*@
            </tr>
        }
    </table>
    <a href="/Skill/AddSkill/" class="btn btn-outline-primary">Yeni Yetenek Girişi</a>

