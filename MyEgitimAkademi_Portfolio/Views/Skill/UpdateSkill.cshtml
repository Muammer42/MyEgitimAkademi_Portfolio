﻿@model MyEgitimAkademi_Portfolio.Models.Skill
@{
    ViewBag.Title = "UpdateEducation";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2>Yetenek Bilgileri Güncelleme Sayfası</h2>
<form method="post">
    @Html.HiddenFor(x => x.SkillID, new { @class = "form-control" })
    <label>Yetenek Adı</label>
    @Html.TextBoxFor(x => x.SkillTitle, new { @class = "form-control" })
    <label>Yetenek Değeri</label>
    @Html.TextBoxFor(x => x.SkillValue, new { @class = "form-control" })

    <br />
    <button class="btn btn-outline-info">Kaydet</button>
</form>